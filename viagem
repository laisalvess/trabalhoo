<script>
    async function CarregarInformaçao(informaçoes) {
        try{
            document.getElementById("info").innerHTML= "Carregando informaçoes do pacote...";
            await new Promise(resolve => setTimeout(resolve, 2000));
        
    let mensagens= {
    'Salvador-BA':"Sol o ano inteiro, festas únicas e uma energia contagiante fazem de Salvador o lugar perfeito para sua proxima viagem!",
    'Natal-RN':"Mergulhe em aguas cristalinas, sinta a emoçao das dunas e viva dias inesqueciveis no coraçao do Nordeste.",
    'Santiago-CL':"Viva o charme da capital chilena, com a Cordilheira dos Andes ao fundo, vinícolas encantadoras experiencias unicas em cada esquina!",
    'Buenos Aires-ARG':"Terra de tango, da gastronomia premiada e das noites vibrantes que transformam sua viagem em uma experiencia inesquecivel!"
 };
 document.getElementById("info").innerHTML = mensagens[informaçoes]

 }
       catch (erro) {
            document.getElementById("info").innerHTML = "Erro ao carregar informaçoes da viagem.";
            console.error("Erro capturado:", erro);
}
}

</script>
